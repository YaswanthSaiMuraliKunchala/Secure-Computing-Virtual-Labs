            <a class="nav-link <%= typeof active !== 'undefined' && active === 'experiments' ? 'active' : '' %>" href="/experiments">
              <i class="fas fa-flask"></i> Experiments
            </a>
          </li>
          
          <!-- User Menu or Login/Register -->
          <% if (locals.user) { %>
            <li class="nav-item dropdown" style="position: relative;">
              <button onclick="toggleUserMenu(event)" class="nav-link btn btn-link" style="background: none; border: none; display: flex; align-items: center; gap: 8px; cursor: pointer; padding: 8px 16px; color: inherit;">
                <i class="fas fa-user-circle"></i> 
                <%= user.email ? user.email.split('@')[0] : user.username %>
                <i class="fas fa-chevron-down" style="font-size: 12px;"></i>
              </button>
              <div id="userDropdownMenu" style="display: none; position: absolute; right: 0; top: 100%; min-width: 220px; background: white; border: 1px solid #ddd; border-radius: 4px; box-shadow: 0 2px 8px rgba(0,0,0,0.15); z-index: 1000; margin-top: 8px;">
                
                <a href="/users/profile" style="display: flex; align-items: center; gap: 8px; padding: 12px 16px; color: inherit; text-decoration: none; border-bottom: 1px solid #eee;">
                  <i class="fas fa-id-card" style="width: 16px;"></i>
                  <span>Profile</span>
                </a>
                <a href="/users/settings" style="display: flex; align-items: center; gap: 8px; padding: 12px 16px; color: inherit; text-decoration: none; border-bottom: 1px solid #eee;">
                  <i class="fas fa-cog" style="width: 16px;"></i>
                  <span>Settings</span>
                </a>
                <form action="/auth/logout" method="POST" style="margin: 0; padding: 0;">
                  <button type="submit" style="width: 100%; display: flex; align-items: center; gap: 8px; padding: 12px 16px; color: #dc3545; background: none; border: none; cursor: pointer; text-align: left;">
                    <i class="fas fa-sign-out-alt" style="width: 16px;"></i>
                    <span>Logout</span>
                  </button>
                </form>
              </div>
            </li>

            <!-- Inline JavaScript for dropdown functionality -->
            <script>
              // Initialize dropdown functionality
              function toggleUserMenu(event) {
                event.preventDefault();
                event.stopPropagation();
                const menu = document.getElementById('userDropdownMenu');
                const isVisible = menu.style.display === 'block';
                
                // Close menu if clicking outside
                function closeMenu(e) {
                  if (!e.target.closest('.nav-item.dropdown')) {
                    menu.style.display = 'none';
                    document.removeEventListener('click', closeMenu);
                  }
                }

                if (!isVisible) {
                  // Close any other open dropdowns first
                  const allDropdowns = document.querySelectorAll('.dropdown-menu');
                  allDropdowns.forEach(dropdown => dropdown.style.display = 'none');
                  
                  // Show this dropdown
                  menu.style.display = 'block';
                  document.addEventListener('click', closeMenu);
                  
                  // Apply dark theme if needed
                  if (document.documentElement.getAttribute('data-theme') === 'dark') {
                    menu.style.backgroundColor = '#2d3436';
                    menu.style.borderColor = '#4b6584';
                    const menuItems = menu.querySelectorAll('a, button');
                    menuItems.forEach(item => {
                      item.style.color = '#ffffff';
                      item.style.borderBottomColor = '#4b6584';
                    });
                    const logoutBtn = menu.querySelector('button');
                    if (logoutBtn) {
                      logoutBtn.style.color = '#fc5c65';
                    }
                  }
                } else {
                  menu.style.display = 'none';
                  document.removeEventListener('click', closeMenu);
                }
              }

              // Handle hover effects
              document.querySelectorAll('#userDropdownMenu a, #userDropdownMenu button').forEach(item => {
                item.addEventListener('mouseover', () => {
                  const isDark = document.documentElement.getAttribute('data-theme') === 'dark';
                  item.style.backgroundColor = isDark ? '#4b6584' : '#f8f9fa';
                });
                
                item.addEventListener('mouseout', () => {
                  const isDark = document.documentElement.getAttribute('data-theme') === 'dark';
                  item.style.backgroundColor = isDark ? '#2d3436' : 'white';
                });
              });

              // Ensure dropdown is properly positioned
              window.addEventListener('resize', () => {
                const menu = document.getElementById('userDropdownMenu');
                if (menu.style.display === 'block') {
                  const button = menu.previousElementSibling;
                  const rect = button.getBoundingClientRect();
                  menu.style.top = rect.bottom + 'px';
                  menu.style.right = (window.innerWidth - rect.right) + 'px';
                }
              });
            </script>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/auth/login" style="padding: 8px 16px; color: inherit; text-decoration: none;">
                <i class="fas fa-sign-in-alt"></i> Login
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/auth/register" style="padding: 8px 16px; color: inherit; text-decoration: none;">
                <i class="fas fa-user-plus"></i> Register
              </a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
