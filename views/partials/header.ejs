      z-index: 9999;
    }
    
    .notification.show {
      transform: translateY(0);
      opacity: 1;
    }
    
    .notification.success .notification-icon {
      color: var(--success-color);
    }
    
    .notification.error .notification-icon {
      color: var(--danger-color);
    }
    
